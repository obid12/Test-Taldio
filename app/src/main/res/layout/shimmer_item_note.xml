<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:checkable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_title"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="@dimen/spacing_16"
            android:background="@drawable/bg_image_placeholder"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/view_date"
            app:layout_constraintStart_toEndOf="@+id/view_btn_checkbox"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title" />

        <View
            android:id="@+id/view_btn_checkbox"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="@dimen/spacing_normal"
            android:background="@drawable/bg_image_placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_date"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/bg_image_placeholder"
            android:includeFontPadding="false"
            android:textColor="@color/neutral_60"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/view_time"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="15 Maret" />

        <View
            android:id="@+id/view_time"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_image_placeholder"
            android:includeFontPadding="false"
            android:textColor="@color/neutral_60"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="15 Maret" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>